<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragments.TaskDueFragment">

    <!-- TODO: Update blank fragment layout -->

    <!-- TODO: Update blank fragment layout -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="350px"
        android:layout_marginTop="105px"
        android:background="@color/colorWhitebrown">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="25sp"

            android:fontFamily="casual"
            android:layout_marginTop="18dp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:text="No of Readings Today"
            android:layout_alignParentTop="true"
            android:layout_alignRight="@+id/textnoclass"
            android:layout_alignEnd="@+id/textnoclass"
            android:id="@+id/textView4" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="50sp"

            android:fontFamily="casual"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:text="12"
            android:layout_marginRight="18dp"
            android:layout_marginEnd="18dp"
            android:id="@+id/textnoclass"
            android:layout_below="@+id/textView4"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="470px"
        android:orientation="vertical"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Things to Read"
            android:fontFamily="cursive"
            android:id="@+id/News" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageView2" />
        <android.support.v7.widget.RecyclerView
            android:id="@+id/recycler_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="vertical" />
    </LinearLayout>


</FrameLayout>
